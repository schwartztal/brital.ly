<tr>
    <td class="col-sm-8 col-md-6">
    <div class="media">
        <a class="thumbnail pull-left" href="#"> <img class="media-object" src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png" style="width: 72px; height: 72px;"> </a>
        <div class="media-body">
            <h4 class="media-heading"><a href="#"><%= cart_item.title %></a></h4>
            <span>Status: </span>
            <% if cart_item.inventory_quantity != 0 %>
            <span class="text-success"><strong>In Stock</strong></span>
            <% else %>
            <span class="text-warning"><strong>Unavailable</strong></span>
            <% end %>
        </div>
    </div></td>
    <td class="col-sm-1 col-md-1" style="text-align: center">
    <%= form_for cart_item, :url => cart_path, method: :put do |f| %>
        <%= f.hidden_field :product_id, :value => cart_item.product_id %>
        <%= f.number_field :quantity, :value => cart_item.quantity %>
        <%= submit_tag "Update Quantity", :class => "btn btn-primary" %>
    <% end %>
    </td>
    <td class="col-sm-1 col-md-1 text-center"><strong><%= number_to_currency(cart_item.cost, precision: 2) %></strong></td>
    <td class="col-sm-1 col-md-1 text-center"><strong><%= number_to_currency(cart_item.sub_total , precision: 2)%></strong></td>
    <td class="col-sm-1 col-md-1">
    <%= link_to "<span class='glyphicon glyphicon-remove'> Remove </span>".html_safe, cart_path(product_id: cart_item.product_id), method: :delete, :class => "btn btn-danger" %><br>
    </td>
</tr>
